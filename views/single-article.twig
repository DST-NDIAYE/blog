{% extends "layout.twig" %}


{% block body %}
	{% if article %}
		<div class="row">
			<div class="card col-md-3 m-2" style="width: 70%;">
				<img src="{{ article.image }}" card-img-top" alt=" "  style="height: 30%">
				<div class="card-body ">
					<h5 class="card-title">
						{{article.title}}
					</h5>
					<p class="card-text">
						{{article.categorie}}
					</p>
					<p class="card-text">
						{{article.content}}
					</p>
					<p class="card-text">
						publier le 	{{article.date | date("d-m-y  H:m:s")}}
					</p>
					<a href="/" class="btn btn-primary">
						retour
					</a>
				</div>
			</div>
		</div>

	{% endif %}

{% endblock %}
