{% extends 'layout.twig' %}

{% block body %}
  <h1>{{title}}</h1>
  <p>Welcome to {{title}}</p>

{% if articles %}
  
    <div class="row" >
    {% for article in articles %}
              <div class="card col-md-3 m-2" style="width: 18rem;">
            <img src="http://placehold.it/300x300" card-img-top" alt="">
            <div class="card-body ">
              <h5 class="card-title"> {{article.title}} </h5>
              <p class="card-text"> {{article.name}} </p>
              <p class="card-text"> {{article.content}} </p>
              <p class="card-text"> {{article.date}} </p>
              <a href="#" class="btn btn-primary"> Afficher </a>
            </div>
          </div>
    {% endfor %}

    </div>

{% endif %}



{% endblock %}
