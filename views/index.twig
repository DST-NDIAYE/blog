{% extends 'layout.twig' %}

{% block body %}
  <h1>{{title}}</h1>
  <p>Welcome to {{title}}</p>

{% if articles %}
  
    <div class="row" >
    {% for article in articles %}
              <div class="card col-md-3 m-2" style="width: 18rem;">
            <img src="{{ article.image }}" card-img-top" alt="">
            <div class="card-body ">
             	<h5 class="card-title">
						{{article.title}}
					</h5>
				
              <a href="article/{{article.id}}" class="btn btn-primary  " > Afficher </a>
              <a href="edit-article/{{article.id}}" class="btn btn-primary  " > Editer </a>
            </div>
          </div>
    {% endfor %}

    </div>

{% endif %}



{% endblock %}
